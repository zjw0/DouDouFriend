<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toos="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgLighterGray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_big"
        android:layout_marginTop="@dimen/padding_big"
        android:layout_marginRight="@dimen/padding_big"
        android:background="@drawable/shape_solid_white_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_normal">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/next_step"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/tv_cache_size"
                style="@style/SimpleTextView"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_huge"
                android:paddingRight="@dimen/padding_small"
                android:textColor="@color/colorTextLighterGray"
                toos:text="156KB" />
        </RelativeLayout>

        <View
            style="@style/HorizontalLine"
            android:layout_marginLeft="@dimen/padding_big"
            android:layout_marginRight="@dimen/padding_big" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_about"
        style="@style/SimpleTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_normal"
        android:layout_margin="@dimen/padding_big"
        android:background="@drawable/shape_solid_white_10dp"
        android:drawableRight="@drawable/next_step"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_big"
        android:text="关于我们" />


</LinearLayout>